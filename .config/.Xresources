URxvt.font: xft:Hermit:pixelsize=15, xft:FontAwesome:pixelsize=15:minspace=False
URxvt.scrollBar: false

! special
*.foreground:   #d0d0d0
*.background:   #000000
*.cursorColor:  #d615a6

! black
*.color0:       #151515
*.color8:       #505050

! red
*.color1:       #ac4142
*.color9:       #ac4142
 
! green
*.color2:       #90a959
*.color10:      #90a959

! yellow
*.color3:       #f4bf75
*.color11:      #f4bf75

! blue
*.color4:       #6a9fb5
*.color12:      #6a9fb5

! magenta
*.color5:       #aa759f
*.color13:      #aa759f

! cyan
*.color6:       #75b5aa
*.color14:      #75b5aa

! white
*.color7:       #d0d0d0
*.color15:      #f5f5f5


URxvt*geometry: 240x84

! enable real transparency
urxvt*depth: 32
urxvt*background: rgba:0000/0000/0200/c900

URxvt.perl-ext-common: 	default,matcher,resize-font,keyboard-select
URxvt.keysym.M-Escape: 	perl:keyboard-select:activate
URxvt.keyboard-select.clipboard: true
URxvt.url-launcher: 	/usr/bin/xdg-open
URxvt.matcher.rend.0: 	Uline Bold fg5
URxvt.matcher.button: 	1
URxvt.keysym.C-Down:  	resize-font:smaller
URxvt.keysym.C-Up:    	resize-font:bigger

URxvt.iso14755: false
URxvt.iso14755_52: false
